{
  "extends": [
    "next/core-web-vitals",
    "standard-with-typescript",
    "standard-react"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "react/react-in-jsx-scope": "off",
    "indent": ["error", 2],
    "max-len": ["error", { "code": 80, "ignoreStrings": true }]
  }
}
